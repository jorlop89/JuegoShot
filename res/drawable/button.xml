<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#b5e61d" />
            <stroke
                android:width="1dp"
                android:color="#50f025" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
	        <gradient
                android:startColor="#b5e61d"
                android:endColor="#50f025"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#50f025" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
      	</shape>
    
    </item>
</selector>
